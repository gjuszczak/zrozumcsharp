@page
@model Zrozumcsharp.Pages.SetupModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Setup - Zrozum C#</title>
    <link rel="stylesheet" href="~/lib/materialize/css/materialize.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <div class="nav-wrapper container">
                <a class="brand-logo">Zrozum C#</a>
            </div>
        </nav>
    </header>
    <div class="content container">
        <main role="main" class="pb-3">
            <div class="container">
                <div class="row">
                    <h4>First run setup</h4>
                </div>
                <div class="row">
                    <div class="col s12 card">
                        <div class="card-content">
                            <span class="card-title">Migrations</span>
                            <p style="height:50px">
                                You have to run database migrations before first-time use.
                            </p>
                            <button type="submit" class="btn waves-effect waves-light">
                                Run DB-Migrations
                                <i class="material-icons right">send</i>
                            </button>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 card">
                        <div class="card-content">
                            <span class="card-title">Admin account</span>
                            <p style="height:50px">
                                Please create first admin account.
                            </p>
                            <form method="post">
                                <div class="input-field">
                                    <input asp-for="Input.Email" />
                                    <label asp-for="Input.Email"></label>
                                </div>
                                <div class="input-field">
                                    <input asp-for="Input.Password" />
                                    <label asp-for="Input.Password"></label>
                                </div>
                                <div class="input-field">
                                    <input asp-for="Input.ConfirmPassword" />
                                    <label asp-for="Input.ConfirmPassword"></label>
                                </div>
                                <div asp-validation-summary="All"></div>
                                <button type="submit" class="btn waves-effect waves-lighty">
                                    Create
                                    <i class="material-icons right">send</i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/materialize/js/materialize.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>