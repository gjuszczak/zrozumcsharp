@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="right hide-on-med-and-down">
@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li>
        <form id="logoutForm" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" class="nav-btn" type="submit">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a asp-page="/Account/Register">Register</a>
    </li>
    <li>
        <a asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
