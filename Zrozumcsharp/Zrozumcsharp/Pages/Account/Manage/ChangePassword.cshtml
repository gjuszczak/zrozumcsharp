@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <h5>@ViewData["Title"]</h5>
    <hr />
    <div class="col m8 sm12">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" ></div>
            <div>
                <label asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" />
                <span asp-validation-for="Input.OldPassword"></span>
            </div>
            <div>
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" />
                <span asp-validation-for="Input.NewPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" />
                <span asp-validation-for="Input.ConfirmPassword" ></span>
            </div>
            <button type="submit" class="btn waves-effect waves-light">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}