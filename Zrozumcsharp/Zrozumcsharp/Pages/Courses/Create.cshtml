@page
@model Zrozumcsharp.Pages.Courses.CreateModel

@{
    ViewData["Title"] = "Create Course";
}

<h4>Create Course</h4>
<hr />
<div class="row">
    <div class="m4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Course.ShortDescription" class="control-label"></label>
                <input asp-for="Course.ShortDescription" class="form-control" />
                <span asp-validation-for="Course.ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Image" class="control-label"></label>
                <input asp-for="Course.Image" class="form-control" />
                <span asp-validation-for="Course.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.UrlSlug" class="control-label"></label>
                <input asp-for="Course.UrlSlug" class="form-control" />
                <span asp-validation-for="Course.UrlSlug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
